<section>
  <h1 class="page-title">Add user</h1>
{{#if message}}
  <div class="validation">
    <p> {{message}} </p>
    <img src="/images/delete.png" onclick="this.parentElement.style.display = 'none'" alt="">
  </div>
{{/if}}

  <form class="adduser" action="/add_user" method="post">
    <div class="bigdiv">
    <div class="item">
      <label>Name</label> <input type="text" name="name" value="" required>
    </div>
    <div class="item">
      <label>Username</label> <input type="text" name="username" value="" required>
    </div>
    <div class="item">
      <label>Email</label> <input type="email" name="email" value="" required>
    </div>
    <div class="item">
      <label>password</label><input type="password" name="password" value="" required>
    </div>
    <div class="item">
      <label>Confirm password</label> <input type="password" name="confPass" value="" required>
    </div>
    <div class="item">
      <label>Mobile Number</label> <input type="number" name="mobile" value="" required>
    </div>
    <div class="item">
      <label>ID Number</label> <input type="number" name="idNumber" value="" required>
    </div>
    <div class="item">
      <label>Job title</label> <input type="text" name="jobTitle" value="" required>
    </div>
    <div class="item">
     Role
     <select class="" name="role">
       <option value="admin">Admin</option>
       <option value="user" selected>User</option>
     </select>
    </div>
    <div  id="addButton">
    <input class="addButton" type="submit" name="" value="Add User">
    </div>
        </div>
  </form>

</section>
