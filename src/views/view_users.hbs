<section>
  {{#if addUserSuccessMsg}}
  <div class="success">
    <p >{{addUserSuccessMsg}}</p>
    <img src="/images/delete.png" onclick="this.parentElement.style.display = 'none'" alt="">
  </div>
  {{/if}}

  <div id="msgDiv" class="success" style="display:none">
    <p id="msg"></p>
    <img src="/images/delete.png" onclick="this.parentElement.style.display = 'none'; window.location = '/view_users'" alt="">
  </div>

  <h1 class="page-title">Users list</h1>
<a href="/add_user"><input class="addButton" id="addButton"type="submit" href="/add_user" value="New user"></a>
  <table>
    <thead>
      <tr>
        <td>User Name</td>
        <td>Name</td>
        <td>ID Number </td>
        <td>Mobile Number</td>
        <td>Email</td>
        <td>Admin</td>
        <td>Delete</td>
      </tr>
    </thead>
    <tbody>
        {{#each userDetails}}
      <tr>
        <td class="username">{{username}}</td>
        <td>{{name}}</td>
        <td>{{id_number}}</td>
        <td>{{mobile}}</td>
        <td>{{email}}</td>
        <td>
          {{#if (isAdmin role)}}
            <input type="checkbox"  onclick="checkRole(this.checked,'{{username}}');" name="" value="" checked>
          {{else}}
            <input type="checkbox"  onclick="checkRole(this.checked,'{{username}}');" name="" value="" >
          {{/if}}
        </td>
        <td> <img src="/images/rubbish-bin.png"  onclick="deleteRow('{{username}}');" alt="delete">
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>
